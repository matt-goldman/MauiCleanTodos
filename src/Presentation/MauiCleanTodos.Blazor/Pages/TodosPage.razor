@inject ITodoListsService todoListService
@inject ITodoItemsService todoItemService

@attribute [Authorize]

@page "/todos"
@using System.Collections.ObjectModel;
@using MauiCleanTodos.Shared.TodoItems;
@using Microsoft.AspNetCore.Authorization

<div class="container">
    <div class="row mx-auto h-100">
        <div class="col">
            <div class="todo-card">
                <div class="todo-list-button-list">
                    @if (hasTodos)
                    {
                         @foreach (var list in todoLists)
                        {
                            <button class="list-button mx-auto align-middle @(list == selectedList ? "selected-list" : "")" style="background-color:@list.Colour" @onclick="() => SelectList(list)">@list.Title</button>
                        }
                    }
                </div>
                <div class="add-button-container">
                    <button class="add-button mx-auto align-middle" @onclick="ShowNewListDialog">+ Add Todo List</button>
                </div>
            </div>
        </div>
        <div class="col">
            @if(selectedList is not null)
            {
                <div class="todo-card">
                    <div class="todo-list-button-list">
                        @foreach (var item in selectedList.Items)
                        {
                            <div class="todo-item">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="@item.Done" @onchange="async () => await TodoItemChanged(item)" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        @item.Title
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="add-button-container">
                        <button class="add-button mx-auto align-middle" @onclick="ShowItemDialog">+ Add Todo Item</button>
                    </div>
                </div>
            }
        </div>
        <div class="col">
            @if(showListDialog)
            {
                <div class="item-dialog">
                    <span class="dialog-title">New todo list</span>
                    <input placeholder="List name" class="mct-input" @bind="newTodoList.Title">
                    <div class="colors-list">
                        @foreach (var color in colours)
                        {
                            <div style="background-color:@color.Colour" @onclick="() => SelectColor(color.Colour)" class="rounded-circle color @(_selectedColour == color.Colour ? "selected-color" : "")"></div>
                        }
                    </div>

                    <button class="dialog-button mx-auto align-middle" @onclick="async () => await AddNewTodoList()">OK</button>
                </div>
            }

            @if (showItemDialog)
            {
                <div class="item-dialog">
                    <span class="dialog-title">New todo item</span>
                    <input placeholder="Item name" class="mct-input" @bind="newTodoItemDto.Title">

                    <button class="dialog-button mx-auto align-middle" @onclick="async () => await AddNewItem()">OK</button>
                </div>
            }
        </div>
    </div>
</div>


@code {
    private ObservableCollection<TodoListDto> todoLists = new();

    public ObservableCollection<ColourContainer> colours { get; set; } = new();

    private NewTodoDto newTodoList = new();

    private bool hasTodos = false;

    private TodoListDto? selectedList;

    private Colours? _selectedColour;

    private bool showItemDialog = false;
    private bool showListDialog = false;

    private NewTodoItemDto newTodoItemDto = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await base.OnAfterRenderAsync(firstRender);

        if (firstRender)
        {
            foreach (var colour in (Colours[])Enum.GetValues(typeof(Colours)))
            {
                colours.Add(new ColourContainer { Colour = colour });
            }

            try
            {

                await GetTodoLists();
            }
            catch (Exception ex)
            {
                Console.WriteLine(ex.Message);
            }
        }
    }

    private async Task GetTodoLists()
    {
        todoLists.Clear();

        var lists = await todoListService.GetTodos();

        foreach (var list in lists)
        {
            todoLists.Add(list);
        }

        hasTodos = true;
        StateHasChanged();
    }

    private void SelectList(TodoListDto list)
    {
        selectedList = list;
        newTodoItemDto.ListId = list.Id;
        showItemDialog = false;
        showListDialog = false;
    }

    private void ShowNewListDialog()
    {
        showItemDialog = false;
        showListDialog = true;
    }

    private void ShowItemDialog()
    {
        showItemDialog = true;
        showListDialog = false;
    }

    private async Task AddNewItem()
    {
        if (selectedList is null || string.IsNullOrEmpty(newTodoItemDto.Title))
        {
            return;
        }

        var selectedListId = selectedList.Id;

        var item = await todoItemService.CreateTodoItem(newTodoItemDto);

        await GetTodoLists();

        newTodoItemDto.Title = string.Empty;

        showItemDialog = false;

        selectedList = todoLists.FirstOrDefault(x => x.Id == selectedListId);
    }

    private async Task TodoItemChanged(TodoItemDto item)
    {
        Console.WriteLine($"Item changed: {item.Id} {item.Title}, done: {item.Done}");
        
        if (item is not null)
        {
            item.Done = !item.Done;

            await todoItemService.UpdateTodoItem(item);
        }
    }

    private async Task AddNewTodoList()
    {
        var todoList = await todoListService.NewTodoList(newTodoList);

        await GetTodoLists();

        showListDialog = false;
    }

    private void SelectColor (Colours colour)
    {
        newTodoList.Colour = colour;
        _selectedColour = colour;
    }
}
